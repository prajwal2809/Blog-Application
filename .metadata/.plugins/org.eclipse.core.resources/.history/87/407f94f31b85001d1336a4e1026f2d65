			Sports:<form:input path="tags"/>
			Technical:<form:input path="tags"/>
			Nature:<form:input path="tags"/>
			
		</form:form>	
		<label>Excerpt</label><br>
		<form:input path="excerpt"/>
		<label>Content</label><br>
		<form:input path="content"/>
